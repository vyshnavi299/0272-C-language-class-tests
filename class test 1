//array of positive and negative 


#include <stdio.h>

int main() {
   int arr[] = {2, -4, 6, -8, 10, -12};
   int size = sizeof(arr)/sizeof(arr[0]);

   printf("Positive numbers: ");
   for(int i = 0; i < size; i++) {
      if(arr[i] > 0) {
         printf("%d ", arr[i]);
      }
   }

   printf("\nNegative numbers: ");
   for(int i = 0; i < size; i++) {
      if(arr[i] < 0) {
         printf("%d ", arr[i]);
      }
   }

   return 0;
}
